@model ICollection<FPTBook1.Models.Product>

<div class="container col-md-8 text-center mt-3">
    <h1 class="text text-danger">Product List</h1>
    <table class="table table-primary mt-3">
        <tr >
            <th>Book Id</th>
            <th>Book Name</th>
            <th>Book Image</th>
            <th>Book Category</th>
            
            <th class="text-center" >Action</th>
        </tr>

        <h2 class="btn btn-outline-success">Add Book</h2>
        @foreach (var book in Model)
        {
           <tr>
               <td>@book.Id</td>
               <td> @book.Name </td>
               <td>@book.Image</td>
               <td>
                   <a class="font-weight-bold" asp-controller="Category" asp-action="Detail" asp-route-id="@book.CategoryId">
                        @book.Categories.Name
                   </a>
               <td>
                   <a class="btn btn-danger" asp-action="Delete" asp-route-id="@book.Id"
                   onclick="return confirm('Are you sure you want to delete this  ?');">
                   Delete</a>
               </td>
               <td>
                   <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@book.Id"
                   >
                   Edit</a>
               </td>
               <td>
                   <a class="btn btn-outline-info" asp-action="Buy" asp-route-id="@book.Id"
                   >
                   Buy</a>
               </td>
           </tr>
        }
    </table>
</div>