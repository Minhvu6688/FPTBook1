@model FPTBook1.Models.Book

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit book</title>
</head>
<body>
    <center>
        <h1>Edit book "@Model.Name"</h1><br />
        <form action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name"></label>
                <input class="form-control" asp-for="Name" />
                <span class="text-black-50 text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image"></label>
                <input class="form-control" asp-for="Image" />
                <span class="text-black-50 text-danger" asp-validation-for="Image"></span>
            </div>

            <label>Select category</label>
           <select class="form-control" asp-for="CategoryId">
               <option>Selectn category</option>
                @foreach(var category in ViewBag.Categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select><br />
            <span class="text text-danger" asp-validation-for="CategoryId"></span>

            <div class="form-group">
                <label asp-for="Price"></label>
                <input class="form-control" asp-for="Price" />
                <span class="text-black-50 text-danger" asp-validation-for="Price"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-success" type="submit" value="Edit">
            </div>
        </form>
    </center>
</body>
</html>
